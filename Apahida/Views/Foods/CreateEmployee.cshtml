@model Apahida.Models.Users

@{
    ViewData["Title"] = "Create";
}
<body>
    <h1>Create</h1>

    <h4>Users</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CreateEmployee">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Username" class="control-label"></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Role" class="control-label" type="hidden"></label>
                    <input asp-for="Role" class="form-control" type="hidden" value="Employee" />
                    <span asp-validation-for="Role" class="text-danger" type="hidden"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</body>
